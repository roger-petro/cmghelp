{
  "name": "cmg-help",
  "displayName": "CMGHelp",
  "description": "CMG Syntax Help",
  "publisher": "rogerio.cunha",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/roger-petro/cmghelp.git"
  },
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",

  "contributes": {
    "languages": [
      {
          "id": "cmgLang",
          "extensions": [".dat", ".inc"],
          "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "cmghelp.openKeywordUrl",
        "title": "Open Keyword Documentation"
      },
      {
        "command": "cmghelp.version",
        "title": "Vers√£o do CMG Help",
        "category": "CMG"
      }
    ],
    "menus" : {
      "commandPalette": [
        {
          "command": "cmghelp.version"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CMG Help",
      "properties": {
          "cmghelp.rootPrefix": {
              "type": "string",
              "default": "C:\\Program Files\\CMG\\Manuals",
              "description": "Root prefix directory where the manuals are stored"
          },
          "cmghelp.version": {
              "type": "string",
              "default": "2022.10",
              "description": "Version of the manuals"
          },
          "cmghelp.solver": {
              "type": "string",
              "enum": ["IMEX", "GEM"],
              "default": "IMEX",
              "description": "Solver being used (IMEX or GEM) to doc lookup"
          },
          "cmghelp.keywordDataPath": {
            "type": "string",
            "default": "${env:USERPROFILE}\\CMGKeywords.json",
            "description": "Path to the CMGKeywords.json file"
          }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
